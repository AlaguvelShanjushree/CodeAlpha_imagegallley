package runner;

import org.openqa.selenium.remote.RemoteWebDriver;
import org.openqa.selenium.chrome.ChromeOptions;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.events.EventFiringDecorator;
import org.openqa.selenium.support.events.WebDriverListener;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.reporter.ExtentSparkReporter;

import utils.EventHandler;
import utils.ExcelReader;

import java.net.URL;
import java.net.MalformedURLException;
import java.time.Duration;

public class TestPage {
    public static WebDriver driver;
    static  ExtentReports extent=null;
    @BeforeClass
    public void createTest(){
        extent = new ExtentReports();
        ExtentSparkReporter spark = new ExtentSparkReporter("reports/Spark.html");
        extent.attachReporter(spark);
    }
    @BeforeMethod
    public void setup() throws MalformedURLException {
        driver = new RemoteWebDriver(new URL("http://localhost:4444"), new ChromeOptions());
        driver.manage().window().maximize();
        driver.manage().timeouts().pageLoadTimeout(Duration.ofSeconds(15));
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(15));
        WebDriverListener listener = new EventHandler();
        driver = new EventFiringDecorator<>(listener).decorate(driver);
        driver.get("https://opensource-demo.orangehrmlive.com/");
    }

   //start your script here
    @Test
    public void testone(){
        extent.createTest("Testcase1");
        driver.findElement(By.xpath("//input[@name='username']")).sendKeys(ExcelReader.ReadExcel(0, 0));
        driver.findElement(By.xpath("//input[@name='password']")).sendKeys(ExcelReader.ReadExcel(0, 1));
        driver.findElement(By.xpath("//button[@type='submit']")).click();
        WebElement text=driver.findElement(By.xpath("//h6[text()='Dashboard']"));
        Assert.assertEquals(text.getText(),"Dashboard");

    }
    @Test
    public void testTwo() throws InterruptedException{
        extent.createTest("TestCase2");
        driver.findElement(By.xpath("//input[@name='username']")).sendKeys(ExcelReader.ReadExcel(0,2));
        driver.findElement(By.xpath("//input[@name='password']")).sendKeys(ExcelReader.ReadExcel(0,3));
        driver.findElement(By.xpath("//button[@type='submit']")).click();
        WebElement alert=driver.findElement(By.xpath("//p[text()='Invalid credentials']"));
        Thread.sleep(200); 
        Assert.assertEquals(alert.getText(), "Invalid credentials");
    }
    @AfterMethod
    public void teardown()
    {
        if(driver!=null){
            driver.quit();
        }
    }
    @AfterClass
    public void saveReport(){
        extent.flush();
    }
}
